/* pages/welcome/welcome.wxss */
page{
  background-color: #b3d4db;
  height: 100%;
}
.container{
  display: flex;
  flex-direction: column;  /*弹性盒模型，列排布 */
  align-items: center;   /*用于居中设置 */
}
.avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 40px;
}
.user-name{
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 100rpx;
}
.moto{
  font-size: 22rpx;
}
.moto-container{
  border:1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 5px;
  line-height: 78rpx;
  color: #405f80;
  margin-top: 200rpx;
}